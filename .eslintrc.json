{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jasmine": true,
        "codeceptjs/codeceptjs": true
    },
    "extends": [
        "airbnb-base",
        "plugin:codeceptjs/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console":"off",
        "no-underscore-dangle":"off",
        "class-methods-use-this":"off",
        "no-unused-vars":"off",
        "no-plusplus":"off",
        "eqeqeq": "off",
        "no-alert":"off",
        "prefer-const":"off",
        "no-throw-literal": "off"
    },
    "plugins": ["jasmine", "codeceptjs"]
}
